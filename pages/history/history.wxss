/* pages/history/history.wxss */

.history-container {
    width: 80%;
    display: flex;
    padding: 32rpx 0rpx;
    border-bottom: 2px dotted #979797;
}

.history-image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 28rpx;
}

.history-container-title {
    font-size: 38rpx;
    color: #666;
}

.history-container-time {
    font-size: 32rpx;
    color: #999;
    letter-spacing: 0;
    margin-top: 12rpx;
}

.history-empty {
    width: 80%;
    height: 380rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}

.history-empty-image {
    width: 214rpx;
    height: 200rpx;
    margin-bottom: 50rpx;
}

.history-text {
    width: 100%;
    font-size: 32rpx;
    text-align: center;
}
