/* pages/report/report.wxss */

.container {
    position: relative;
    background-color: #f8f8f8;
    height: auto;
}

.report-background {
    width: 100%;
    height: 780rpx;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    z-index: 1;
}

.report-avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    z-index: 4;
    position: absolute;
    top: 50rpx;
    left: calc(50% - 70rpx);
    /* margin: 50rpx 0rpx 33rpx 0rpx; */
}

.report-name {
    width: 100%;
    height: 40rpx;
    margin: 10rpx 0rpx 20rpx 0rpx;
    font-size: 38rpx;
    color: #fff;
    position: absolute;
    top: 200rpx;
    left: 0rpx;
    text-align: center;
    z-index: 4;
}

.report-message-container {
    height: auto;
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    align-content: flex-start;
    position: relative;
    margin-top: 270rpx;
    background-image: linear-gradient(90deg, #7492c7 0%, #93a6c7 100%);
}

.report-message-top {
    width: 100%;
    height: 24rpx;
    display: flex;
    justify-content: center;
    position: absolute;
    top: 0px;
    left: 0px;
}

.report-message-top-image {
    width: 92.8%;
    height: 24rpx;
    z-index: 8;
}

.report-message-info {
    height: 100%;
    width: 90%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    position: relative;
    border-radius: 50rpx;
}

.report-message-info-image, .report-each-image {
    position: absolute;
    height: 100%;
    width: 100%;
    z-index: 6;
}

.report-message-info-text {
    z-index: 7;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    justify-content: center;
}

.report-each-image {
    z-index: -1;
}

.report-message-info-text-title {
    margin: 50rpx 0rpx 14rpx 0rpx;
    width: 100%;
    font-size: 38rpx;
    color: #333;
    letter-spacing: 0;
    text-align: center;
    z-index: 7;
}

.report-message-info-text-subtitle {
    width: 80%;
    font-size: 33rpx;
    color: #333;
    letter-spacing: 0;
    margin-top: 23rpx;
}

.report-message-leftIcon, .report-message-rightIcon {
    width: 18rpx;
    height: 91rpx;
    z-index: 7;
    position: absolute;
    top: -25rpx;
}

.report-message-leftIcon {
    left: 5%;
}

.report-message-rightIcon {
    left: 92%;
}

.report-message-info-canvas {
    margin: 10rpx 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.report-message-info-text-info {
    width: 80%;
    font-size: 28rpx;
    color: #666;
    letter-spacing: 0;
    text-align: justify;
    line-height: 40rpx;
    padding: 17rpx 0rpx 23rpx 0rpx;
    border-bottom: 1px dotted #979797;
}

.report-message-info-text-info:last-child {
    margin-bottom: 40rpx;
}

.report-view {
    width: 100%;
    height: 200rpx;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #f9f9f9;
    margin-top: 20rpx;
    padding: 0rpx 5%;
    box-sizing: border-box;
}

.report-container {
    height: 90rpx;
    position: relative;
    color: #fff;
    line-height: 90rpx;
    text-align: center;
}

.report-image {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    left: 0rpx;
    top: 0rpx;
}

.report-button-view {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 2;
    left: 0rpx;
    top: 0rpx;
}

.report-button {
    width: 100%;
    height: 100%;
    border: 1px solid transparent;
    background-color: transparent;
    color: #fff;
    outline: none;
}

.report-button::after {
    border: 0;
}

.report-view .report-save {
    width: 184rpx;
}

.report-view .report-again {
    width: 214rpx;
}

.report-view .report-share {
    width: 248rpx;
}

.report-message-url {
    width: 100%;
    height: 1900rpx;
    position: relative;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    align-content: flex-start;
}

.report-message-url-image {
    width: 100%;
    height: 2100rpx;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    z-index: 1;
}

.report-message-url-item {
    margin-top: 70rpx;
    z-index: 3;
    position: relative;
    width: 80%;
    display: flex;
}

.first-url-item {
    margin-top: 270rpx;
}

.report-message-url-item-image {
    height: 140rpx;
    width: 140rpx;
}

.report-message-url-item-text {
    width: 63%;
    height: 140rpx;
    margin-left: 37rpx;
    border-bottom: 1px solid #d8d8d8;
}

.report-message-url-item-text-title {
    font-size: 32rpx;
    color: #333;
    letter-spacing: 0;
    line-height: 32rpx;
    margin: 6rpx 0rpx 12rpx 0rpx;
}

.report-message-url-item-text-subtitle {
    font-size: 24rpx;
    color: #666;
    letter-spacing: 0;
    text-align: justify;
    margin-bottom: 20rpx;
}

.report-message-url-item-text-info {
    display: flex;
    align-items: center;
}

.report-message-url-item-text-info-button {
    width: 85rpx;
    height: 24rpx;
    font-size: 16rpx;
    color: #fff;
    letter-spacing: 0;
    text-align: center;
    background: #de5043;
    border-radius: 12px;
    line-height: 24rpx;
}

.report-message-url-item-text-info-msg {
    font-size: 20rpx;
    color: #999;
    letter-spacing: 0;
    text-align: justify;
    margin-left: 9rpx;
}

.report-message-url-item-wait {
    width: 100%;
    height: 48rpx;
    z-index: 3;
    margin-top: 70rpx;
}

.myCanvas, .backgroundCanvas, .coverView, .backgroundImage {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    z-index: 4;
}

.backgroundImage {
    z-index: 2;
}

.coverView {
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 3;
}
