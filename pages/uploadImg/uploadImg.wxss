.uploadImg-title {
    font-size: 30rpx;
    color: #666;
    letter-spacing: 0;
    text-align: center;
    margin: 55rpx 0rpx 49rpx 0rpx;
}

.uploadImg-bigImg {
    height: 452rpx;
    width: 512rpx;
    margin: 9rpx 0rpx 35rpx 0rpx;
    position: relative;
}

.uploadImg-bigImg-background {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    z-index: 3;
}

.uploadImg-bigImg-person {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    z-index: 1;
}

.uploadImg-bigImg-title {
    height: 43.8rpx;
    width: 100%;
    position: absolute;
    bottom: 0rpx;
    left: 0rpx;
    z-index: 2;
    font-size: 28rpx;
    color: #fff;
    letter-spacing: 0;
    text-align: center;
}

.uploadImg-item-content {
    width: 82%;
    display: flex;
    flex-wrap: wrap;
}

.uploadImg-item-title {
    width: 100%;
    font-size: 30rpx;
    color: #666;
    letter-spacing: 0;
    text-align: center;
    margin: 0rpx 20rpx 10rpx 0rpx;
}

.uploadImg-item-info {
    height: 45rpx;
    width: 100%;
    line-height: 60rpx;
    display: flex;
    margin-bottom: 5rpx;
    font-size: 30rpx;
    align-items: center;
    color: #666;
    letter-spacing: 0;
}

.uploadImg-item-left {
    width: 30rpx;
    height: 60rpx;
}

.uploadImg-button {
    bottom: 30rpx;
    /* background: #85a8e6; */
    border-radius: 4px;
    z-index: 3;
}

.uploadImg-button-text {
    z-index: 3;
    font-size: 34rpx;
    color: #fff;
    letter-spacing: 0;
    text-align: center;
}

.uploadImg-button-image {
    bottom: 30rpx;
    z-index: 2;
}

.uploadImg-nameInput {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 30rpx;
}

.nameInput {
    width: 512rpx;
    height: 80rpx;
    font-size: 30rpx;
    border: 2rpx solid #85a8e6;
    padding-left: 28rpx;
    box-sizing: border-box;
}

.uploadImg-warning-image {
    width: 29rpx;
    height: 29rpx;
    margin-right: 10rpx;
}
