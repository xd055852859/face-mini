/**index.wxss**/

.container {
    position: relative;
}

.home-background-image {
    width: 100%;
    height: 410rpx;
    position: absolute;
    z-index: 1;
}

.report-info {
    width: 90%;
    height: 135rpx;
    margin: 325rpx 0rpx 30rpx 0rpx;
    background: #fff;
    box-shadow: 0 0 9rpx 0 rgba(73, 73, 73, 0.50);
    border-radius: 6rpx;
    display: flex;
    justify-content: space-between;
    position: relative;
}

.report-info-image {
    width: calc(100% + 16rpx);
    height: calc(100% + 16rpx);
    position: absolute;
    z-index: 2;
    top: -7rpx;
    left: -7rpx;
}

.report-info-container {
    width: 25%;
    height: 65%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    z-index: 3;
    margin: 40rpx 0rpx 10rpx 0rpx;
    box-sizing: border-box;
    border-right: 1.5rpx solid #979797;
}

.report-info-image-time {
    width: 40rpx;
    height: 40rpx;
}

.report-info-title {
    width: 100%;
    font-size: 30rpx;
    color: #333;
    letter-spacing: 0;
    text-align: center;
}

.report-userInfo-container {
    width: 73%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 3;
    padding-top: 23rpx;
    box-sizing: border-box;
}

.report-userInfo-num {
    font-size: 24rpx;
    color: #999;
    letter-spacing: 0;
    margin-bottom: 6rpx;
}

